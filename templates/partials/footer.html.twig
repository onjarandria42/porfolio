    <div class="container">
      <div class="copyright text-center">
        <p>
          © <span>Copyright</span> 
          <strong class="px-1 sitename">{{ siteSettings.siteName|default('Onjarandria') }}</strong> 
          <span>All Rights Reserved</span>
        </p>
      </div>
      
      {# ✅ Inclusion du controller - Plus besoin de variable globale ! #}
      {{ render(controller('App\\Controller\\SocialLinksController::social')) }}
      
      <div class="credits" style="display:none">
        Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> Distributed by <a href="https://themewagon.com">ThemeWagon</a>
      </div>
    </div>
  </footer>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
