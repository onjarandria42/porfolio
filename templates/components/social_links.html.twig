      {% if contactInfo %}
        <div class="social-links text-center mt-3">
          {% if contactInfo.twitter %}
            <a href="{{ contactInfo.twitter }}" target="_blank" class="twitter"><i class="bi bi-twitter-x"></i></a>
          {% endif %}
          {% if contactInfo.facebook %}
            <a href="{{ contactInfo.facebook }}" target="_blank" class="facebook"><i class="bi bi-facebook"></i></a>
          {% endif %}
          {% if contactInfo.instagram %}
            <a href="{{ contactInfo.instagram }}" target="_blank" class="instagram"><i class="bi bi-instagram"></i></a>
          {% endif %}
          {% if contactInfo.github %}
            <a href="{{ contactInfo.github }}" target="_blank" class="github"><i class="bi bi-github"></i></a>
          {% endif %}
          {% if contactInfo.linkedin %}
            <a href="{{ contactInfo.linkedin }}" target="_blank" class="linkedin"><i class="bi bi-linkedin"></i></a>
          {% endif %}
        </div>
      {% endif %}